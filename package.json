{
  "name": "ctcast",
  "productName": "ctcast",
  "version": "0.1.3",
  "description": "Caption and Image Description Broadcasting",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint .  --ext .js",
    "lint-fix": "eslint --fix .  --ext .js",
    "test": "electron-forge make && npx playwright test"
  },
  "keywords": [],
  "author": {
    "name": "Faculty and Students at the University of Illinois",
    "email": ""
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "ctcast"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/index.html",
                  "js": "./src/renderer.js",
                  "name": "main_window",
                  "preload": {
                    "js": "./src/preload.js"
                  }
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/preset-react": "^7.14.5",
    "@electron-forge/cli": "^6.0.0-beta.61",
    "@electron-forge/maker-deb": "^6.0.0-beta.61",
    "@electron-forge/maker-rpm": "^6.0.0-beta.61",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
    "@electron-forge/maker-zip": "^6.0.0-beta.61",
    "@electron-forge/plugin-webpack": "^6.0.0-beta.61",
    "@playwright/test": "^1.27.1",
    "@vercel/webpack-asset-relocator-loader": "^1.7.0",
    "babel-loader": "^8.2.2",
    "css-loader": "^6.4.0",
    "electron": "^15.5.4",
    "electron-playwright-helpers": "^1.5.1",
    "eslint": "^8.26.0",
    "eslint-plugin-jest": "^27.1.1",
    "eslint-plugin-react": "^7.31.8",
    "jest": "^27.2.5",
    "jszip": "^3.10.1",
    "node-loader": "^2.0.0",
    "playwright": "^1.27.1",
    "spectron": "^17.0.0",
    "style-loader": "^3.3.0",
    "xml2js": "^0.4.23"
  },
  "dependencies": {
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "@material-ui/core": "^4.12.4",
    "@mui/icons-material": "^5.6.2",
    "@mui/material": "^5.6.3",
    "axios": "^0.26.1",
    "electron-forge": "^0.0.5",
    "electron-squirrel-startup": "^1.0.0",
    "events": "^3.3.0",
    "node-fetch": "^2.6.7",
    "prop-types": "^15.8.1",
    "react": "^17.0.2",
    "react-bootstrap": "^2.3.0",
    "react-bootstrap-validation": "^0.1.11",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.3.0",
    "smartinterval": "^1.0.1"
  }
}
